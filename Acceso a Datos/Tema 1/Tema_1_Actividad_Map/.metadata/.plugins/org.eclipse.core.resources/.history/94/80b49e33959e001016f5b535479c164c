package actividad1;

import java.security.KeyStore.Entry;
import java.util.Hashtable;
import java.util.Iterator;
import java.util.Map;

public class Taller {
	private Map <Matricula, Vehiculo> vehiculos;

	public Taller() {
		
		this.vehiculos = new Hashtable<>();
	}
	
	public void aÃ±adirVehiculo(Vehiculo v) {
		
		/*put(clave, valor) -> devuelve null
		 * si el vehiculo era null
		 * (no habia vehiculo asociado) o el anterior
		 * vehiculo asociado a la matricula era null*/
		vehiculos.put(v.getMatricula(), v);
	}
	
	public void mostrarVehiculos() {
		//itero por el map
		//entrySet(): set de Entrys con los pares
		
		for(java.util.Map.Entry<Matricula, Vehiculo> entry: vehiculos.entrySet()) {
			//imprimo vehiculos....: el valor
			System.out.println(entry.getValue());
		}
	}
}
