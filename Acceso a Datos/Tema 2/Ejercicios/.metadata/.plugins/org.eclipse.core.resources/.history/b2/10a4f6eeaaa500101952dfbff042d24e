					// TODO: handle exception
				}
			}
		}
		if(l!=null) {
			imprimeCodigoPostal6(buffer);
		}
	}
	private static List<Restaurante> leeFichero(BufferedReader buffer) throws IOException{
		String linea =buffer.readLine();
		List<Restaurante> l = new LinkedList<>();
		linea= buffer.readLine();
		while(linea!=null) {
			Restaurante r = Restaurante.parse(linea);
			l.add(r);
			linea= buffer.readLine();	
			}
		return l;
	}
	
