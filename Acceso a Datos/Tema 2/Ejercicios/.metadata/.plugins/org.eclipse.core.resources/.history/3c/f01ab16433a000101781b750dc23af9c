package Ejercicios;

import java.io.File;

public class Ejercicio4 {
	
	public static void  main(String[]args) {
		
		File entorno = new File(Ejercicio1.RUTA);
		File raiz = new File(entorno.getAbsolutePath(),"/");
		// creo el directorio en si
		raiz.mkdir();
		File bin = new File (raiz, "bin");
		bin.mkdir();
		
		try {
			File rm =new File (bin, "rm");
			rm.createNewFile();
			File ls =new File (bin, "ls");
			ls.createNewFile();
			File cat =new File (bin, "cat");
			cat.createNewFile();
		}catch (Exception e) {
			// TODO: handle exception
		}
		
		}
	
	
	
}
