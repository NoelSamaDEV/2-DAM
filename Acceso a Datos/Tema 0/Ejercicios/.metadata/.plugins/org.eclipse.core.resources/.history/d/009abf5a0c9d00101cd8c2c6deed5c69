package Logica;

import java.util.Iterator;

public class vehiculo {
	private String matricula;
	private String modelo;
	private int km;
	
	public vehiculo(String matricula, String modelo, int km) {
		super();
		this.matricula = matricula;
		this.modelo = modelo;
		this.km = km;
	}

	public String getMatricula() {
		return matricula;
	}

	public void setMatricula(String matricula) {
		compruebaMatricula(matricula);
		this.matricula = matricula;
	}

	private static void compruebaMatricula(String matricula) {
		// 4 digitos
		// 3 letras
		for (int i = 0; i < 4; i++) {
			char c= matricula.charAt(i);
			if (!Character.isDigit(c)) {
				throw new MatriculaException("Lo primero no son digitos");
			}
			
		}
		
	}

	public String getModelo() {
		return modelo;
	}

	public void setModelo(String modelo) {
		this.modelo = modelo;
	}

	public int getKm() {
		return km;
	}

	public void setKm(int km) {
		this.km = km;
	}
	
	
}
